<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="@string/about3"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="@string/about4"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="@string/about2"
        android:textSize="15sp" />

      <TextView
          android:id="@+id/textView5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/textView41"
          android:layout_marginTop="22dp"
          android:gravity="center"
          android:text="@string/about5"
          android:textSize="15sp" />

      <TextView
          android:id="@+id/textView41"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/textView2"
          android:paddingBottom="2dp"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:paddingTop="2dp"
          android:text="@string/about41"
          android:textSize="15sp" />

      <Button
          android:id="@+id/button1"
          android:layout_width="123dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textView5"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="32dp"
          android:text="Close" />

      <com.triladroid.spycamera.adprefer
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button1"
          android:layout_centerHorizontal="true"
          android:layout="@layout/ad_layout" />

      <TextView
          android:id="@+id/textView1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:gravity="center"
          android:includeFontPadding="true"
          android:padding="8dp"
          android:text="@string/about1"
          android:textSize="15sp" />

</RelativeLayout>